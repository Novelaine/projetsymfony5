{% extends"admin/base.html.twig" %}

{% block body %}
<h2>Mes livres : </h2>
    <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Auteur</th>
                    <th>Titre</th>
                    <th>Description</th>
                </tr>
            </thead>
                    
            <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.auteur }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.description }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

{% endblock %}