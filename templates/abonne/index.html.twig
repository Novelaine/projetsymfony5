{% extends 'admin/base.html.twig' %}

{% block title %}Abonné{% endblock %}

{% block body %}
    <h1>Abonné</h1>
    <a href="{{ path('abonne_new') }}" class="btn btn-info">Créer</a>
<br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonne in abonnes %}
            <tr>
                <td>{{ abonne.id }}</td>
                <td>{{ abonne.pseudo }}</td>
                <td>{{ abonne.roles ? abonne.roles|json_encode : '' }}</td>
                <td>{{ abonne.password ? "********" : "" }}</td>
                <td>{{ abonne.nom }}</td>
                <td>{{ abonne.prenom }}</td>
                <td>
                    <a href="{{ path('abonne_show', {'id': abonne.id}) }}" class="btn btn-book"><i class="fas fa-pen"></i></a>
                    <a href="{{ path('abonne_edit', {'id': abonne.id}) }}" class="btn btn-info"><i class="fas fa-pen"></i></a>
                    <a href="{{ path("abonne_delete", {id: abonne.id })}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
               
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun abonné enregistré.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
