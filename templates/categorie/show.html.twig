{% extends 'admin/base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <h1>Catégorie</h1>
<a href="{{ path("categorie_index") }}">
        <i class="fa fa-reply"></i>
</a>
<br>
<br>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ categorie.titre }}</td>
            </tr>
            <tr>
                <th>Mots clés</th>
                <td>{{ categorie.mots }}</td>
            </tr>
        </tbody>
    </table>
<h4>Livres de la catégorie</h4>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <th>ID</th>
            <th>Titre</th>
            <th>Auteur</th>
        </thead>
        <tbody>
        {% for livre in categorie.livres %}
            <tr>
            <td>{{ livre.id }}</td>
            <td>{{ livre.titre }}</td>
            <td>{{ livre.auteur }}</td>
            <td><a href="{{ path("livre_fiche", {id: livre.id })}}">Voir plus</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-info">Modifier</a>

    {{ include('categorie/_delete_form.html.twig') }}
{% endblock %}
